<!--
  This Behavior Tree replans the global path periodically at 1 Hz and it also has
  recovery actions.
-->
<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <RecoveryNode number_of_retries="6" name="NavigateRecovery">

      <PipelineSequence name="NavigateWithReplanning">
        <PlannerSelector selected_planner="{selected_planner}"/>
        <ControllerSelector selected_controller="{selected_controller}" default_controller="FollowPath"/>
        <GoalCheckerSelector selected_goal_checker="{selected_goal_checker}" default_goal_checker="goal_checker"/> 

        <RateController hz="0.1">
        <RecoveryNode number_of_retries="1" name="ComputePathToPose">
            <ComputePathToPose goal="{goal}" path="{path}" planner_id="{selected_planner}"/> 
            <ReactiveFallback name="ComputePathToPoseRecoveryFallback">
              <GoalUpdated/>
              <ClearEntireCostmap name="ClearGlobalCostmap-Context" service_name="global_costmap/clear_entirely_global_costmap"/>
            </ReactiveFallback>
          </RecoveryNode>

          
          <!-- <ComputePathToPose goal="{goal}" path="{path}" planner_id="GridBased"/> -->
        </RateController>
        <FollowPath path="{path}" controller_id="{selected_controller}" goal_checker_id="{selected_goal_checker}"/>
        <!-- <FollowPath path="{path}" controller_id="FollowPath" goal_checker_id="goal_checker"/> -->

      </PipelineSequence>

      <ReactiveFallback name="RecoveryFallback">
        <GoalUpdated/>
      </ReactiveFallback>
    </RecoveryNode>
  </BehaviorTree>
</root>
